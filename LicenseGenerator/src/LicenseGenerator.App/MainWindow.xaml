<Window x:Class="LicenseGenerator.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="License 生成工具 - 管理员专用" 
        Height="780" Width="620"
        MinHeight="750" MinWidth="580"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F8F8F8">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="License 生成工具" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- 授权信息 GroupBox -->
        <GroupBox Grid.Row="1" Header="授权信息" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 机器码 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="机器码:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtMachineCode"
                         Padding="8" Margin="0,0,0,10"
                         FontFamily="Consolas"
                         Text="" 
                         Tag="输入客户机器码（32位或带横线格式）"/>

                <!-- 授权时长 -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="授权时长:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbDuration" 
                          Padding="8" Margin="0,0,0,10">
                    <ComboBoxItem Content="1天" Tag="1"/>
                    <ComboBoxItem Content="7天" Tag="7"/>
                    <ComboBoxItem Content="1个月" Tag="30" IsSelected="True"/>
                    <ComboBoxItem Content="3个月" Tag="90"/>
                    <ComboBoxItem Content="6个月" Tag="180"/>
                    <ComboBoxItem Content="1年" Tag="365"/>
                    <ComboBoxItem Content="永久" Tag="36500"/>
                </ComboBox>

                <!-- 授权类型 -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="授权类型:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cmbLicenseType" 
                          Padding="8" Margin="0,0,0,10">
                    <ComboBoxItem Content="试用版 (最多1账号)" Tag="0"/>
                    <ComboBoxItem Content="标准版 (最多10账号)" Tag="1" IsSelected="True"/>
                    <ComboBoxItem Content="专业版 (最多50账号)" Tag="2"/>
                    <ComboBoxItem Content="企业版 (无限账号)" Tag="3"/>
                </ComboBox>

                <!-- 最大账号数 -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="最大账号数:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtMaxAccounts"
                         Padding="8" Text="10" Width="100" HorizontalAlignment="Left"/>
            </Grid>
        </GroupBox>

        <!-- 授权功能 GroupBox -->
        <GroupBox Grid.Row="2" Header="授权功能" Padding="15" Margin="0,0,0,15">
            <WrapPanel>
                <CheckBox x:Name="chkBoss" Content="BOSS直聘" IsChecked="True" Margin="0,0,20,8"/>
                <CheckBox x:Name="chkZhilian" Content="智联招聘" IsChecked="True" Margin="0,0,20,8"/>
                <CheckBox x:Name="chk58" Content="58同城" IsChecked="True" Margin="0,0,20,8"/>
                <CheckBox x:Name="chkGanji" Content="赶集网" IsChecked="True" Margin="0,0,20,8"/>
                <CheckBox x:Name="chkQiancheng" Content="前程无忧" IsChecked="True" Margin="0,0,20,8"/>
                <CheckBox x:Name="chkLiepin" Content="猎聘" IsChecked="True" Margin="0,0,20,8"/>
                <CheckBox x:Name="chkYupaowang" Content="鱼泡网" IsChecked="True" Margin="0,0,20,8"/>
                <CheckBox x:Name="chkAI" Content="AI智能" IsChecked="True" Margin="0,0,20,8"/>
            </WrapPanel>
        </GroupBox>

        <!-- 生成按钮 -->
        <Button Grid.Row="3" 
                Content="生成 License" 
                FontSize="16"
                FontWeight="Bold"
                Padding="20,12"
                Background="#4CAF50"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                Margin="0,0,0,15"
                Click="BtnGenerate_Click"/>

        <!-- 生成结果 GroupBox -->
        <GroupBox Grid.Row="4" Header="授权码（复制发送给客户）" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBox x:Name="txtResult"
                         Height="100"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="10"
                         Padding="10"
                         Background="White"
                         Text=""
                         VerticalContentAlignment="Top"/>
                <Button Content="复制授权码" Padding="15,8" Margin="0,10,0,0"
                        HorizontalAlignment="Stretch"
                        Click="BtnCopy_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- License 信息 GroupBox -->
        <GroupBox Grid.Row="5" Header="License 信息" Padding="10" Margin="0,0,0,10">
            <TextBox x:Name="txtLicenseInfo"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     FontSize="11"
                     Padding="10"
                     Background="White"
                     VerticalContentAlignment="Top"/>
        </GroupBox>

        <!-- 底部警告 -->
        <TextBlock Grid.Row="6" 
                   Text="⚠ 此工具仅供管理员使用，请妥善保管" 
                   Foreground="#E65100"
                   HorizontalAlignment="Center"
                   FontSize="12"/>
    </Grid>
</Window>
